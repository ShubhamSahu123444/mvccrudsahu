@model IEnumerable<mvccrudsahu.Models.Empolyee>
@{
}
<a asp-action="Create" asp-controller="Empolyee" class="btn btn-outline-danger">Create</a>
<table class=" table table-bordered">
    
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Place</th>
        <th>Age</th>
        <th>Action</th>
    </tr>
  
    @foreach (var emp in Model)
  {
    <tr>
         <td>@emp.Id</td>
         <td>@emp.Name</td>
         <td>@emp.Place</td>
         <td>@emp.Age</td>
         <td>
             <a asp-action="Edit" asp-controller="Empolyee" asp-route-id="@emp.Id"onclick="return confirm('Are You Sure To Edit This Record ?')">Edit</a> 
             ||
             <a asp-action="Delete" asp-controller="Empolyee" asp-route-id="@emp.Id" onclick="return confirm('Are You Sure To Delete This Record ?')">Delete</a>
         </td>
    </tr>
  }
</table>